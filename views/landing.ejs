    <script>
        const mainPage = document.getElementById('main-page');
        const servicesPage = document.getElementById('services-page');
        const servicesTitle = document.getElementById('services-title');
        const servicesList = document.getElementById('services-list');
        const choiceModal = document.getElementById('choiceModal');
        const searchInput = document.getElementById('searchInput');
        const searchButton = document.getElementById('searchButton');

        // --- Base de données complète des services ---
        const servicesData = {
            citoyennete_justice: {
                title: 'Citoyenneté & Justice',
                services: [
                    { icon: 'fa-passport', color: 'blue', title: 'Demande de Passeport', desc: 'Obtenez ou renouvelez votre passeport biométrique.' },
                    { icon: 'fa-id-card', color: 'blue', title: 'Carte d\'Identité Nationale', desc: 'Première demande ou renouvellement de votre CNI.' },
                    { icon: 'fa-baby', color: 'blue', title: 'Actes d\'État Civil', desc: 'Demandez vos actes de naissance, mariage ou décès.' },
                    { icon: 'fa-gavel', color: 'red', title: 'Casier Judiciaire', desc: 'Obtenez un extrait (Bulletin n°3).' },
                    { icon: 'fa-file-signature', color: 'blue', title: 'Autorisation de Sortie', desc: 'Demande d\'autorisation de sortie du territoire pour mineur.' },
                ]
            },
            transport_vehicules: {
                title: 'Transport & Véhicules',
                services: [
                    { icon: 'fa-car', color: 'green', title: 'Immatriculation Véhicule', desc: 'Obtenez la première carte grise pour un véhicule neuf ou importé.' },
                    { icon: 'fa-id-card-alt', color: 'green', title: 'Renouvellement Carte Grise', desc: 'Mettez à jour votre certificat d\'immatriculation ou demandez un duplicata.' },
                    { icon: 'fa-exchange-alt', color: 'green', title: 'Transfert De Propriété', desc: 'Effectuez le changement de propriétaire d\'un véhicule d\'occasion.' },
                    { icon: 'fa-address-card', color: 'blue', title: 'Permis De Conduire Numérique', desc: 'Effectuez votre première demande pour un permis de conduire sécurisé.' },
                    { icon: 'fa-sync', color: 'blue', title: 'Renouvellement Permis', desc: 'Renouvelez votre permis de conduire arrivé à expiration.' },
                    { icon: 'fa-road', color: 'yellow', title: 'Vignette & Taxe Routière', desc: 'Payez votre vignette annuelle et les taxes associées au transport.' },
                    { icon: 'fa-receipt', color: 'red', title: 'Paiement Amendes Routières', desc: 'Réglez vos contraventions et amendes de circulation en ligne.' },
                    { icon: 'fa-parking', color: 'blue', title: 'Permis De Stationnement', desc: 'Obtenez une autorisation de stationnement pour des zones réglementées.' },
                    { icon: 'fa-bus', color: 'purple', title: 'Autorisation Transport Public', desc: 'Demandez ou renouvelez une licence pour le transport de passagers.' },
                    { icon: 'fa-truck', color: 'purple', title: 'Suivi Fret & Logistique', desc: 'Suivez le statut de vos marchandises et dossiers de fret.' },
                    { icon: 'fa-wrench', color: 'gray', title: 'Contrôle Technique', desc: 'Prenez rendez-vous pour la visite technique de votre véhicule.' },
                    { icon: 'fa-book', color: 'gray', title: 'Journal Des Transactions', desc: 'Consultez l\'historique de tous vos paiements effectués sur la plateforme.' },
                ]
            },
            economie_finances: {
                title: 'Économie & Finances',
                services: [
                    { icon: 'fa-building', color: 'purple', title: 'Création d\'Entreprise', desc: 'Enregistrez votre nouvelle entreprise (personne morale ou physique).' },
                    { icon: 'fa-id-badge', color: 'purple', title: 'Numéro d\'Identification Fiscale', desc: 'Obtenez votre NIF pour vos activités économiques.' },
                    { icon: 'fa-file-invoice-dollar', color: 'indigo', title: 'Déclaration d\'Impôts', desc: 'Déclarez et payez vos impôts sur le revenu ou sur les sociétés.' },
                    { icon: 'fa-cash-register', color: 'indigo', title: 'Paiement de Taxes', desc: 'Réglez diverses taxes et redevances administratives.' },
                ]
            },
            education_sante: {
                title: 'Éducation & Santé',
                services: [
                    { icon: 'fa-school', color: 'green', title: 'Inscription Scolaire & Universitaire', desc: 'Inscrivez vos enfants ou vous-même dans les établissements publics.' },
                    { icon: 'fa-user-graduate', color: 'green', title: 'Résultats d\'Examens Nationaux', desc: 'Consultez les résultats du BEPC, Baccalauréat, etc.' },
                    { icon: 'fa-hospital-user', color: 'teal', title: 'Prise de Rendez-vous Hôpital', desc: 'Prenez rendez-vous dans un centre de santé public.' },
                    { icon: 'fa-syringe', color: 'teal', title: 'Carnet de Vaccination Numérique', desc: 'Accédez à votre historique de vaccination et aux certificats.' },
                ]
            },
            defense_securite: {
                title: 'Défense & Sécurité',
                services: [
                    { icon: 'fa-user-shield', color: 'gray', title: 'Inscription aux Concours', desc: 'Postulez aux concours de l\'armée, gendarmerie et police.' },
                    { icon: 'fa-file-alt', color: 'gray', title: 'Certificat de Position Militaire', desc: 'Demandez votre certificat pour les démarches administratives.' },
                ]
            },
            autres_services: {
                title: 'Autres Secteurs Spécifiques',
                services: [
                    { icon: 'fa-laptop-code', color: 'orange', title: 'Enregistrement de Startup', desc: 'Services dédiés aux innovateurs de l\'économie numérique.' },
                    { icon: 'fa-leaf', color: 'green', title: 'Permis Environnemental', desc: 'Demandes relatives aux projets à impact environnemental.' },
                    { icon: 'fa-gas-pump', color: 'black', title: 'Licences (Pétrole & Gaz)', desc: 'Procédures pour les opérateurs du secteur pétrolier.' },
                ]
            }
        };

        // --- Logique de recherche ---
        function handleSearch() {
            const searchTerm = searchInput.value.trim().toLowerCase();
            if (searchTerm.length < 2) {
                showToast("Veuillez entrer au moins 2 caractères pour rechercher.", 'warning');
                return;
            }

            const results = [];
            for (const categoryKey in servicesData) {
                servicesData[categoryKey].services.forEach(service => {
                    const titleMatch = service.title.toLowerCase().includes(searchTerm);
                    const descMatch = service.desc.toLowerCase().includes(searchTerm);
                    if (titleMatch || descMatch) {
                        results.push(service);
                    }
                });
            }

            displaySearchResults(results, searchTerm);
        }

        function displaySearchResults(results, term) {
            servicesTitle.innerText = `Résultats pour "${term}"`;
            servicesList.innerHTML = ''; // Clear previous results

            if (results.length === 0) {
                servicesList.innerHTML = `<p class="col-span-full text-center text-gray-500">Aucun service trouvé pour votre recherche.</p>`;
            } else {
                results.forEach(service => {
                    const serviceCard = `
                        <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-xl hover:-translate-y-2 transition-all duration-300 flex flex-col items-start">
                            <div class="bg-${service.color}-100 text-${service.color}-600 p-4 rounded-full mb-4">
                                <i class="fas ${service.icon} fa-2x"></i>
                            </div>
                            <h3 class="text-lg font-bold mb-2">${service.title}</h3>
                            <p class="text-gray-600 text-sm mb-6 flex-grow">${service.desc}</p>
                            <button onclick="openChoiceModal('${service.title}')" class="mt-auto bg-gray-800 text-white font-semibold px-5 py-2 rounded-lg hover:bg-gray-900 transition duration-300 self-end text-sm">
                                Accéder au service
                            </button>
                        </div>
                    `;
                    servicesList.innerHTML += serviceCard;
                });
            }
            
            mainPage.classList.add('hidden');
            servicesPage.classList.remove('hidden');
            window.scrollTo(0, 0);
        }


        // --- Logique de navigation & Modals ---
        let selectedServiceTitle = '';

        function showServices(categoryKey) {
            const category = servicesData[categoryKey];
            if (!category) return;
            servicesTitle.innerText = category.title;
            servicesList.innerHTML = '';
            category.services.forEach(service => {
                const serviceCard = `
                    <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-xl hover:-translate-y-2 transition-all duration-300 flex flex-col items-start">
                        <div class="bg-${service.color}-100 text-${service.color}-600 p-4 rounded-full mb-4">
                            <i class="fas ${service.icon} fa-2x"></i>
                        </div>
                        <h3 class="text-lg font-bold mb-2">${service.title}</h3>
                        <p class="text-gray-600 text-sm mb-6 flex-grow">${service.desc}</p>
                        <button onclick="openChoiceModal('${service.title}')" class="mt-auto bg-gray-800 text-white font-semibold px-5 py-2 rounded-lg hover:bg-gray-900 transition duration-300 self-end text-sm">
                            Accéder au service
                        </button>
                    </div>
                `;
                servicesList.innerHTML += serviceCard;
            });
            mainPage.classList.add('hidden');
            servicesPage.classList.remove('hidden');
            window.scrollTo(0, 0);
        }

        function showMainPage(event) {
            if (event) event.preventDefault();
            servicesPage.classList.add('hidden');
            mainPage.classList.remove('hidden');
            window.scrollTo(0, 0);
        }

        function openChoiceModal(serviceTitle) {
            selectedServiceTitle = serviceTitle;
            const modalTitle = document.getElementById('choiceModalTitle');
            modalTitle.innerText = `Lancer : ${serviceTitle}`;
            choiceModal.style.display = 'flex';
        }

        function closeChoiceModal() {
            choiceModal.style.display = 'none';
        }

        function showWebFormUnavailable() {
            closeChoiceModal();
            showToast("Ce formulaire n'est pas encore disponible. Veuillez réessayer plus tard.", 'warning');
        }

        function redirectToWhatsApp() {
            const phoneNumber = '24107883106'; // Numéro sans '+' ou caractères spéciaux
            const message = `Bonjour, je souhaite commencer la démarche pour le service : ${selectedServiceTitle}`;
            const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
            window.open(whatsappUrl, '_blank');
            closeChoiceModal();
        }

        function showToast(message, type = 'info') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = `toast show toast-${type}`;
            let iconClass = type === 'warning' ? 'fa-exclamation-triangle' : 'fa-info-circle';
            toast.innerHTML = `<i class="fas ${iconClass}"></i> ${message}`;
            container.appendChild(toast);
            setTimeout(() => {
                toast.classList.remove('show');
                toast.classList.add('hide');
                toast.addEventListener('transitionend', () => toast.remove());
            }, 5000);
        }

        // --- Event Listeners ---
        searchButton.addEventListener('click', handleSearch);
        searchInput.addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                handleSearch();
            }
        });

        document.getElementById('webformBtn').addEventListener('click', showWebFormUnavailable);
        document.getElementById('whatsappBtn').addEventListener('click', redirectToWhatsApp);

